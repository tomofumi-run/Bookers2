<main>
 <div class="container px-5 px-sam-0">
  <div class="row">
    <div class="col-md-3">
  <h2>Users info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg", size:'100x100'%>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
  <div class="row">
  <%= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-outline-secondary btn-block fas fa-user-cog"%>
  </div>
  
  <!--New Bookの部分-->
   <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| %>
   <div class="form-group">
    <%= f.label "Title" %></br>
    <%= f.text_field :title, class: "col-xs-12 form-control book_title" %>
   </div>
   <div class="form-group">
    <%= f.label "Opinion" %></br>
    <%= f.text_area :body, class: "col-xs-12 form-control book_body" %>
   </div>
   <div class="form-group">
    <%= f.submit 'Create Book', class: "col-xs-12 btn btn-success" %>
   </div>
   <% end %>
  </div>
  <!--Bookdetailの部分-->
  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
       <table class="table table-hover table-inverse">
         <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
         </thead>
        <% @books.each do |book|%>
        <tbody>
         <tr>
        　<td><%= link_to attachment_image_tag book.user, :profile_image, size:'100x100' %></td>        
          <td><%= link_to book.title%></td>
          <td><%= book.body%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
 </div>
</main>