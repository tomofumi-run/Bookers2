<main>
 <div class="col-md-3">
  <h2>Users info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg", size:'100x100'%>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
  <div class="row">
  <%= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-outline-secondary btn-block fas fa-user-cog"%>
  </div>
</div>
<!--上のdivはいらない-->


<h1>New book</h1>
<h1>画像投稿フォーム</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>本</h4>
  <%= f.text_field :title %>
  <h4>内容</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>


<h1>Books</h1>
</main>