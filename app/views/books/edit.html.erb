<main>
 <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:</br>
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
        <% end %>
        <%= form_with model:@book, local:true do |f| %>
          <div class="form-group">
           <%= f.label "Title"%></br>
           <%= f.text_field :title, autofocus: true, class:"form-control book_title",  placeholder:"Title"%>       
          </div>
          <div class="form-group">
           <%= f.label "Opinion" %></br>
           <%= f.text_area :body, autofocus: true, class:"form-control book_body", placeholder:"Opinion"%>       
          </div>
          <div class="form-group">
           <%= f.submit "Update Book", class: "btn btn-success" %>          
          </div>
          <%= link_to "Show", book_path(@book.id) %> |
          <%= link_to "Back", books_path %>
       <% end %> 
     </div>
   </div>
  </div>
</main>