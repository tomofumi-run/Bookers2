<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--textをblackにしてある-->
    <% if user_signed_in? %>
      <li><%= link_to"Home",root_path,class:"navbar-link text-black fas fa-home" %></li>
      <li><%= link_to"Users",users_path,class:"navbar-link text-black fas fa-users" %></li>
      <li><%= link_to"Books",books_path,class:"navbar-link text-black fas fa-book-open" %></li>
      <li><%= link_to"logout",destroy_user_session_path,class:"navbar-link text-black fas fa-sign-out-alt",method: :delete %></li>
    <% else %>
      <li><%= link_to"Home",root_path,  class:"navbar-link text-black fas fa-home" %></li>
      <li><%= link_to"About",homes_about_path,class:"navbar-link text-black fas fa-link"%></li>
      <li><%= link_to"Sign up", new_user_registration_path,class:"navbar-link text-black fas fa-user-plus" %></li>
      <li><%= link_to"login", new_user_session_path,class:"navbar-link text-black fas fa-sign-in-alt" %></li>
    <% end %>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
